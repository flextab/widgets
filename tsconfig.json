{
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "allowJs": true,
        "noEmit": true,
        "paths": {
            "*": ["./typings/*/index.d.ts"]
        },
        "lib": ["DOM", "ESNext"]
    },
    "include": ["widgets/**/*", "typings/global.d.ts"]
}
